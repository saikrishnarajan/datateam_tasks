select * from T_ViewField where CompanyId=6397 and Name='Comments' and Id in (646563,653680,653700);

/*Main Update Query*/
Update t_viewfield Set Deleted =0 where CompanyId=6397 and Name='Comments' and Id in (646563,653680,653700);

/*Rollback Query*/
Update t_viewfield Set Deleted =1 where CompanyId=6397 and Name='Comments' and Id in (646563,653680,653700);